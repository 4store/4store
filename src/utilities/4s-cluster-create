#!/usr/bin/env bash

if [ "$1" = '--help' ] ; then
  echo "Usage: $0 <kbname> [--password password]"
  exit
fi

if [ "$1" = '--version' ] ; then
  4s-backend --version | sed 's/4s-backend/'`basename $0`'/'
  exit
fi

if (($# >= 1)) ; then
 logger -t $0 "'$*' by $USER"
 4s-ssh-all-parallel 4s-backend-setup --node '$id' --cluster '$nodes' --segments 32 "$@"
else
 echo "Usage: $0 <kbname> [--password password]"
fi
